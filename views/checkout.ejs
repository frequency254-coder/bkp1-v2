<!-- views/checkout.ejs -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card bg-dark border-0 shadow-lg neon-glow">
                <div class="card-body p-4">
                    <h2 class="card-title mb-4 text-center text-neon">
                        <i class="bi bi-bag-check-fill me-2"></i> Checkout — Cash on Delivery
                    </h2>

                    <% if (cart && cart.length) { %>
                        <!-- 🧾 Order Summary -->
                        <div class="mb-4">
                            <h4 class="mb-3 text-light">
                                <i class="bi bi-receipt me-2 text-neon"></i> Order Summary
                            </h4>
                            <ul class="list-group list-group-flush rounded-3 overflow-hidden">
                                <% cart.forEach(item => { %>
                                    <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center border-secondary">
                                        <div>
                                            <span class="fw-semibold"><%= item.product?.name || "Unknown Product" %></span>
                                            <br>
                                            <small class="text-muted">Qty: <%= item.qty %></small>
                                        </div>
                                        <span class="fw-bold text-neon">
                                            Ksh <%= ((item.product?.price || item.priceSnapshot) * item.qty).toLocaleString() %>
                                        </span>
                                    </li>
                                <% }) %>
                                <li class="list-group-item bg-black text-light d-flex justify-content-between align-items-center border-0">
                                    <strong>Total</strong>
                                    <strong class="fs-5 text-neon">Ksh <%= total.toLocaleString() %></strong>
                                </li>
                            </ul>
                        </div>

                        <!-- 🧍 Customer Info -->
                        <form id="checkout-form" action="/checkout" method="POST" class="needs-validation" novalidate>
                            <h4 class="mb-3 text-light">
                                <i class="bi bi-person-vcard me-2 text-neon"></i> Customer Info
                            </h4>

                            <div class="mb-3">
                                <label class="form-label text-light">Full Name</label>
                                <input type="text" name="customerName" class="form-control bg-dark text-light border-neon" required>
                                <div class="invalid-feedback">Enter your full name.</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-light">Phone</label>
                                <input type="text" name="phone" class="form-control bg-dark text-light border-neon" pattern="^(\+?254|0)[0-9]{9}$" required>
                                <div class="invalid-feedback">Enter a valid Kenyan phone (e.g. 0712..., +254712...).</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-light">Delivery Address</label>
                                <textarea name="address" class="form-control bg-dark text-light border-neon" rows="3" required></textarea>
                                <div class="invalid-feedback">Delivery address is required.</div>
                            </div>

                            <!-- ✅ Actions -->
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <a href="/cart" class="btn btn-outline-light btn-sm">
                                    <i class="bi bi-arrow-left"></i> Back to Cart
                                </a>
                                <button type="submit" class="btn btn-neon px-4 py-2">
                                    <i class="bi bi-check-circle-fill me-2"></i> Confirm Order
                                </button>
                            </div>
                        </form>
                    <% } else { %>
                        <div class="alert alert-info text-center shadow-sm">
                            🛒 Your cart is empty. <a href="/shop" class="text-neon">Start shopping</a>.
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 💡 Inline Script -->
<script>
    (function () {
        'use strict';
        const form = document.getElementById('checkout-form');
        if (!form) return;

        form.addEventListener('submit', e => {
            if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
                form.classList.add('was-validated');
                return;
            }

            e.preventDefault();
            // ⚡ Optional confirmation modal
            const confirmed = confirm("Place order for Ksh " + "<%= total.toLocaleString() %>" + " ?");
            if (confirmed) form.submit();
        });
    })();
</script>
